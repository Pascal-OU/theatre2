<div id="carouselExample" class="carousel slide h-75" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="{{ asset('images/carousel/1.jpg') }}" class="d-block w-100" alt="Image 1">
        </div>
